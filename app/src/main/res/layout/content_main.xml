        <ImageButton
            android:id="@+id/icon6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_rowWeight="1"
